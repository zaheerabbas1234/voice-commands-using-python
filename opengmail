import webbrowser
import speech_recognition as sr

def open_gmail():
    recognizer = sr.Recognizer()
    with sr.Microphone() as source:
        print("üé§ Speak now (say: Open Gmail)...")
        audio = recognizer.listen(source)

        try:
            command = recognizer.recognize_google(audio)
            print("You said:", command)  # üîç Check what it recognized

            if "open gmail" in command.lower():
                webbrowser.open("https://mail.google.com")
                print("‚úÖ Opening Gmail...")
            else:
                print("‚ùå Command not recognized.")
        except sr.UnknownValueError:
            print("‚ö†Ô∏è Could not understand audio")
        except sr.RequestError:
            print("‚ùó Request error from Google API")

open_gmail()

